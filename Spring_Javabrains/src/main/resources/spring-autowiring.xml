<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Note the use of autowire="byName" -->
	<bean id="triangle2" class="org.prajesh.javabrains.shapes.Triangle2" autowire="byName">

	</bean>

	<bean id="pointA" class="org.prajesh.javabrains.beans.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointB" class="org.prajesh.javabrains.beans.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="org.prajesh.javabrains.beans.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

</beans>